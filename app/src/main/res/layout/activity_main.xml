<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextViewHighestScore"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="En Yüksek Skor: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Skor: "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextViewHighestScore"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Kalan süre: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/TextViewHighestScore"
        app:layout_constraintTop_toBottomOf="@+id/TextViewHighestScore" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/fly"
            android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/fly" android:onClick="fly_Click"/>
        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/fly" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>